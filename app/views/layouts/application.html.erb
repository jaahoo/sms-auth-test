<!DOCTYPE html>
<html>
  <head>
    <title>SmsAuthTest</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <div class="container mx-auto" data-turbo-temporary>
      <% flash.each do |level, message| %>
        <%= tag.div class: "notification is-#{level} text-center mt-4" do %>
          <%= message %>
        <% end %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
